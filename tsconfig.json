{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2020", "dom", "DOM.Iterable"],
		"target": "ES2020",
		"removeComments": true,
		"importHelpers": true,
		"strict": true,
		"importsNotUsedAsValues": "preserve",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"$lib/*": ["src/lib/*"]
		}
	},
	"include": ["src/**/*.js", "src/**/*.ts", "src/**/*.svelte"],
	"exclude": [
		"build",
		"node_modules",
		".svelte-kit",
		"src/lib/Material/components/Slider/nouislider.min.js"
	]
}
