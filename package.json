{
	"name": "svelty-material",
	"version": "1.0.30",
	"description": "Svelte Materialify fork with ts support and updated scss.",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "sveltekit",
		"dev:check": "npm-run-all --parallel sveltekit check:watch",
		"package": "svelte-kit package",
		"build": "svelte-kit build",
		"check": "svelte-check --tsconfig ./tsconfig.json --threshold error",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch --threshold error --ignore .svelte-kit",
		"sveltekit": "svelte-kit dev",
		"release": "npm run package && cd package && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/abdo643-HULK/svelty-material/svelty-material.git",
		"directory": "svelty-material"
	},
	"author": "abdo643-HULK",
	"homepage": "https://github.com/abdo643-HULK/svelty-material",
	"bugs": {
		"url": "https://github.com/abdo643-HULK/svelty-material/issues"
	},
	"keywords": [
		"svelte",
		"sapper",
		"svelte-kit",
		"svelte material",
		"material",
		"material ui",
		"material-components",
		"component-library",
		"svelte-material",
		"ui"
	],
	"peerDependencies": {
		"svelte": ">=3.29.4"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.0.0-next.216",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.33",
		"npm-run-all": "^4.1.5",
		"sass": "^1.45.2",
		"svelte": "^3.44.3",
		"svelte-check": "^2.2.11",
		"svelte-preprocess": "^4.10.1",
		"svelte2tsx": "^0.4.12",
		"tslib": "^2.3.1",
		"typescript": "^4.5.4",
		"vite": "^2.7.10"
	},
	"dependencies": {
		"nouislider": "^15.5.0"
	}
}
